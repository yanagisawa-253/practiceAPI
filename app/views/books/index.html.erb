<div class="container">
  <div class="row">
  <div class="book-box col-6 mt-5">
    <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>

  <div class="new-book col-6 mt-5">
    <h3>新規投稿</h3>
    <%= form_with model: @book, local:true do |f| %>
      <p>タイトル</p>
      <%= f.text_field :title %>
      <p>本文</p>
      <%= f.text_area :body %><br>
      <%= f.submit '投稿', class: "btn btn-primary" %>
    <% end %>
  </div>
  </div>
</div>